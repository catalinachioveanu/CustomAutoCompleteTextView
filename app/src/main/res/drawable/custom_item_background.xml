<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid  android:color="#bdc3c7" />
            <stroke
                android:width="1dp"
                android:color="#95a5a6" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="@dimen/button_left_padding"
                android:top="@dimen/button_top_padding"
                android:right="@dimen/button_right_padding"
                android:bottom="@dimen/button_bottom_padding" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid  android:color="#bdc3c7" />
            <stroke
                android:width="1dp"
                android:color="#95a5a6" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="@dimen/button_left_padding"
                android:top="@dimen/button_top_padding"
                android:right="@dimen/button_right_padding"
                android:bottom="@dimen/button_bottom_padding" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#ecf0f1" />
            <stroke
                android:width="1dp"
                android:color="#bdc3c7" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="@dimen/button_left_padding"
                android:top="@dimen/button_top_padding"
                android:right="@dimen/button_right_padding"
                android:bottom="@dimen/button_bottom_padding" />
        </shape>
    </item>
</selector>